---
import CodeBlock from './CodeBlock.astro';

const schemaCode = `module MyApp

[RendererAPI]
[ContextBridge]
interface SystemAPI {
  getAppVersion() -> string
  showNotification(title: string, body: string)

  [Store]
  windowState() -> WindowState
}`;

const mainCode = `import { SystemAPI } from '../ipc/browser/MyApp';

SystemAPI.for(win.webContents).setImplementation({
  async getAppVersion() {
    return app.getVersion();
  },

  async showNotification(title, body) {
    new Notification({ title, body }).show();
  },

  getInitialWindowStateState() {
    return { isMaximized: win.isMaximized() };
  },
});`;

const preloadCode = `import '../ipc/preload/MyApp';`;

const rendererCode = `import { SystemAPI } from '../ipc/renderer/MyApp';
import { useWindowStateStore } from '../ipc/renderer-hooks/MyApp';

// Call methods
const version = await SystemAPI.getAppVersion();
await SystemAPI.showNotification('Hello', 'World');

// Use reactive store
function App() {
  const state = useWindowStateStore();
  return <div>{state.result?.isMaximized}</div>;
}`;

const tabs = [
  { id: 'schema', label: 'api.eipc', lang: 'eipc', code: schemaCode },
  { id: 'main', label: 'main.ts', lang: 'typescript', code: mainCode },
  { id: 'preload', label: 'preload.ts', lang: 'typescript', code: preloadCode },
  { id: 'renderer', label: 'renderer.tsx', lang: 'typescript', code: rendererCode },
];
---

<section class="relative flex items-center justify-center overflow-hidden">
  <!-- Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-[--color-bg-secondary] via-[--color-bg-primary] to-[--color-bg-primary]"></div>

  <!-- Grid Pattern -->
  <div class="absolute inset-0 circuit-bg opacity-60"></div>

  <!-- Radial glow -->
  <div class="absolute top-[350px] left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] rounded-full blur-3xl pointer-events-none" style="background: radial-gradient(circle, rgba(0, 229, 255, 0.08) 0%, transparent 70%);"></div>

  <!-- Simple Atom Visualization -->
  <div class="absolute top-[350px] left-1/2 -translate-x-1/2 -translate-y-1/2 w-[400px] h-[400px] md:w-[500px] md:h-[500px] opacity-30 pointer-events-none">
    <svg class="w-full h-full" viewBox="0 0 400 400" fill="none">
      <!-- Static orbit rings -->
      <ellipse cx="200" cy="200" rx="160" ry="60" stroke="var(--color-electron-cyan)" stroke-width="1" opacity="0.5"/>
      <ellipse cx="200" cy="200" rx="160" ry="60" stroke="var(--color-electron-cyan)" stroke-width="1" opacity="0.5" transform="rotate(60 200 200)"/>
      <ellipse cx="200" cy="200" rx="160" ry="60" stroke="var(--color-electron-cyan)" stroke-width="1" opacity="0.5" transform="rotate(-60 200 200)"/>

      <!-- Central glow -->
      <circle cx="200" cy="200" r="40" fill="var(--color-electron-cyan)" opacity="0.15"/>
      <circle cx="200" cy="200" r="20" fill="var(--color-electron-cyan)" opacity="0.3"/>
      <circle cx="200" cy="200" r="8" fill="var(--color-electron-cyan)"/>
    </svg>
  </div>


  <!-- Content -->
  <div class="relative z-10 mx-auto max-w-6xl px-6 pt-8 pb-8 text-center">
    <!-- Badge -->
    <div class="mb-5 animate-fade-in-up inline-flex items-center gap-2.5 rounded-full glass-card px-4 py-2 text-sm" style="animation-delay: 0.1s;">
      <span class="w-2 h-2 rounded-full bg-emerald-400 shadow-sm shadow-emerald-400/50"></span>
      <span class="text-[--color-text-secondary] font-medium">Type-safe Electron IPC</span>
    </div>

    <!-- Main Headline -->
    <h1 class="mb-5 animate-fade-in-up" style="animation-delay: 0.2s;">
      <span class="block text-4xl md:text-5xl lg:text-6xl font-extrabold text-[--color-text-primary] tracking-tight leading-[1.1]">
        Great IPC for
      </span>
      <span class="block text-5xl md:text-6xl lg:text-7xl font-extrabold text-electron-cyan mt-1">
        Electron
      </span>
    </h1>

    <!-- Subtitle -->
    <p class="mx-auto mb-8 max-w-2xl text-base md:text-lg text-[--color-text-secondary] leading-relaxed animate-fade-in-up" style="animation-delay: 0.3s;">
      Define your IPC schema once. Get type-safe handlers, automatic validation,
      React hooks, and secure context bridge exposure â€” <span class="text-electron-cyan">all generated for you</span>.
    </p>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4 mb-10 animate-fade-in-up" style="animation-delay: 0.4s;">
      <a href="/docs/getting-started/introduction" class="btn-primary">
        Get Started
        <svg class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
        </svg>
      </a>
      <a href="https://github.com/MarshallOfSound/ipc" class="btn-secondary" target="_blank" rel="noopener noreferrer">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd"/>
        </svg>
        View on GitHub
      </a>
    </div>

    <!-- Code Preview Window with Tabs -->
    <div class="relative mx-auto max-w-3xl animate-fade-in-up" style="animation-delay: 0.5s;">
      <!-- Glow effect behind window -->
      <div class="absolute -inset-4 rounded-3xl blur-2xl opacity-50" style="background: radial-gradient(circle, rgba(0, 229, 255, 0.15) 0%, transparent 70%);"></div>

      <div class="relative code-window rounded-2xl overflow-hidden shadow-2xl">
        <!-- Window chrome with tabs -->
        <div class="code-window-header flex items-center gap-4 px-4 py-3 border-b border-white/10">
          <div class="traffic-lights">
            <div class="traffic-light traffic-light-red"></div>
            <div class="traffic-light traffic-light-yellow"></div>
            <div class="traffic-light traffic-light-green"></div>
          </div>

          <!-- Tabs -->
          <div class="flex-1 flex items-center justify-center gap-1">
            {tabs.map((tab, index) => (
              <button
                class:list={[
                  'hero-tab px-3 py-1.5 rounded-md text-xs font-medium transition-all',
                  index === 0 ? 'bg-white/10 text-white' : 'text-[#64748b] hover:text-[#94a3b8] hover:bg-white/5'
                ]}
                data-tab={tab.id}
              >
                {tab.label}
              </button>
            ))}
          </div>

          <div class="w-12"></div>
        </div>

        <!-- Code panels -->
        <div class="relative min-h-[280px]">
          {tabs.map((tab, index) => (
            <div
              class:list={[
                'hero-panel p-4 text-left',
                index === 0 ? '' : 'hidden'
              ]}
              data-panel={tab.id}
            >
              <CodeBlock code={tab.code} lang={tab.lang} />
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>

</section>

<script>
  function initHeroTabs() {
    const tabs = document.querySelectorAll('.hero-tab');
    const panels = document.querySelectorAll('.hero-panel');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const targetId = tab.getAttribute('data-tab');

        // Update tab styles
        tabs.forEach(t => {
          t.classList.remove('bg-white/10', 'text-white');
          t.classList.add('text-[#64748b]');
        });
        tab.classList.add('bg-white/10', 'text-white');
        tab.classList.remove('text-[#64748b]');

        // Show/hide panels
        panels.forEach(panel => {
          if (panel.getAttribute('data-panel') === targetId) {
            panel.classList.remove('hidden');
          } else {
            panel.classList.add('hidden');
          }
        });
      });
    });
  }

  initHeroTabs();
  document.addEventListener('astro:after-swap', initHeroTabs);
</script>

