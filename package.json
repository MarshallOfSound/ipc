{
  "name": "@marshallofsound/ipc",
  "version": "0.0.0-development",
  "description": "Typesafe, usable and clever Electron IPC",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "repository": "https://github.com/electron/ipc",
  "author": "Samuel Attard",
  "license": "MIT",
  "scripts": {
    "build": "tsc && tsc -p tsconfig.esm.json",
    "lint": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\" \"tests/**/*.tsx\"",
    "lint:fix": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\" \"tests/**/*.tsx\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "yarn test:e2e:build && playwright test",
    "test:e2e:build": "node tests/e2e/test-app/build.js && tsc -p tests/e2e/test-app/tsconfig.json",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": "prettier --write"
  },
  "dependencies": {
    "peggy": "^1.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19",
    "electron": "^36.4.0",
    "esbuild": "^0.27.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.5.3",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "typescript": "^5.8.3",
    "vitest": "^4.0.16",
    "zod": "^4.2.1"
  },
  "files": [
    "parser",
    "dist",
    "LICENSE"
  ],
  "peerDependencies": {
    "electron": ">=18.0.3"
  },
  "packageManager": "yarn@4.10.3"
}
